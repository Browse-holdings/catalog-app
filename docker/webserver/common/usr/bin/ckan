# !/usr/lib/ckan/bin/python
import hashlib
import os
import sys

from pkg_resources import load_entry_point

paster_commands = ["create", "help", "make-config",
                   "points", "post", "request",
                   "serve", "setup-app"]

instance = None
config = False


for num, arg in enumerate(sys.argv):
    if arg.startswith("-i"):
        instance = sys.argv[num + 1]
        sys.argv.pop(num)
        sys.argv.pop(num)
    elif arg.startswith("-c") or arg.startswith("--config"):
        config = True

if not config and not instance:
    try:
        config_file = "/etc/ckan/production.ini"
        fh = open(config_file)
    except IOError:
        raise IOError("No production.ini in /etc/ckan/. "
                      "Either create one from production.ini.temp or use "
                      "-i instance_name or -c config_file")
    finally:
        fh.close()

if not config and instance:
    try:
        config_file = "/etc/ckan/%s/production.ini" % instance
        fh = open(config_file)
    except IOError:
        raise IOError("config file for instance %r does not exist. "
                      "It should be located at %r" % (instance, config_file))
    finally:
        fh.close()

if not config and sys.argv[1:]:
    if sys.argv[1] not in paster_commands:
        sys.argv.append("-c")
        sys.argv.append(config_file)
    # paster commands just accept config file as last arg
    elif sys.argv[1] in ("serve", "setup-app"):
        sys.argv.append(config_file)

sys.argv.insert(1, '--plugin=ckan')

if __name__ == '__main__':
    sys.exit(
        load_entry_point('PasteScript', 'console_scripts', 'paster')()
    )
